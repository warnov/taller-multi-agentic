{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenAPI Document on Azure Functions",
    "description": "This is the OpenAPI Document on Azure Functions",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://func-contosoretail-ipg2s.azurewebsites.net/api"
    }
  ],
  "paths": {
    "/OrdersReporter": {
      "post": {
        "tags": [
          "Reportes"
        ],
        "summary": "Genera un reporte HTML de órdenes",
        "description": "Recibe líneas de órdenes de un cliente, genera un reporte HTML con el detalle, lo sube a Blob Storage y retorna la URL con SAS para visualizarlo/descargarlo.",
        "operationId": "ordersReporter",
        "requestBody": {
          "description": "Datos del cliente y líneas de órdenes a incluir en el reporte",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ordersReportRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Objeto JSON con la propiedad 'reportUrl' que contiene la URL SAS del reporte generado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Mensaje de error cuando el JSON es inválido o no contiene órdenes",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "orderLine": {
        "type": "object",
        "properties": {
          "orderNumber": {
            "type": "string"
          },
          "orderDate": {
            "type": "string"
          },
          "orderLineNumber": {
            "type": "integer",
            "format": "int32"
          },
          "productName": {
            "type": "string"
          },
          "brandName": {
            "type": "string"
          },
          "categoryName": {
            "type": "string"
          },
          "quantity": {
            "type": "number",
            "format": "double"
          },
          "unitPrice": {
            "type": "number",
            "format": "double"
          },
          "lineTotal": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "ordersReportRequest": {
        "type": "object",
        "properties": {
          "customerName": {
            "type": "string"
          },
          "startDate": {
            "type": "string"
          },
          "endDate": {
            "type": "string"
          },
          "orders": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/orderLine"
            }
          }
        }
      }
    }
  }
}